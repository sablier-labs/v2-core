{
  "name": "@sablier/v2-core",
  "description": "Core smart contracts for the Sablier V2 cryptoasset streaming protocol",
  "version": "1.0.0",
  "author": {
    "name": "Sablier Labs Ltd.",
    "url": "https://sablier.com"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.2",
    "lint-staged": "^12.5.0",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.1.0",
    "rimraf": "^3.0.2",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "foundry",
    "money-streaming",
    "sablier",
    "smart-contracts",
    "solidity"
  ],
  "license": "LGPL-3.0",
  "packageManager": "yarn@3.3.0",
  "private": true,
  "scripts": {
    "clean": "rimraf cache out",
    "lint": "yarn prettier:check && yarn solhint \"{src,test}/**/*.sol\"",
    "postinstall": "husky install",
    "prettier:write": "prettier --write \"**/*.{json,md,sol,yml}\"",
    "prettier:check": "prettier --check \"**/*.{json,md,sol,yml}\"",
    "test": "forge test",
    "test:optimized": "FOUNDRY_PROFILE=optimized forge build && FOUNDRY_PROFILE=test-optimized forge test"
  }
}
