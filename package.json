{
  "name": "@sablier/v2-core",
  "description": "Core smart contracts of the Sablier V2 cryptoasset streaming protocol",
  "license": "BUSL-1.1",
  "version": "1.0.0",
  "author": {
    "name": "Sablier Labs Ltd",
    "url": "https://sablier.com"
  },
  "bugs": {
    "url": "https://github.com/sablierhq/v2-core/issues"
  },
  "devDependencies": {
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.3",
    "rimraf": "^4.4.0",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "files": [
    "/src",
    "CHANGELOG.md"
  ],
  "homepage": "https://github.com/sablierhq/v2-core#readme",
  "keywords": [
    "asset-streaming",
    "blockchain",
    "cryptoassets",
    "ethereum",
    "foundry",
    "money-streaming",
    "real-time-finance",
    "sablier",
    "sablier-v2",
    "smart-contracts",
    "solidity",
    "token-streaming"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sablierhq/v2-core"
  },
  "scripts": {
    "build": "forge build",
    "build:optimized": "FOUNDRY_PROFILE=optimized forge build",
    "build:smt": "FOUNDRY_PROFILE=smt forge build",
    "clean": "rimraf broadcast cache optimized-out out",
    "gas:report": "forge test --gas-report --no-match-path \"./test/{fuzz,unit}/**/*.sol\" --no-match-test \"test(Fuzz)?_RevertWhen_\\w{1,}?\"",
    "gas:snapshot": "forge snapshot --match-path \"./test/{fuzz,unit}/**/*.sol\" --no-match-test \"test(Fuzz)?_RevertWhen_\\w{1,}?\"",
    "gas:snapshot:optimized": "pnpm build:optimized && FOUNDRY_PROFILE=test-optimized forge snapshot --match-path \"./test/{fuzz,unit}/**/*.sol\" --no-match-test \"test(Fork)?(Fuzz)?_RevertWhen_\\w{1,}?\"",
    "lint": "pnpm lint:sol && pnpm prettier:check",
    "lint:sol": "solhint \"{script,src,test}/**/*.sol\"",
    "prettier:write": "prettier --write \"**/*.{json,md,sol,yml}\"",
    "prettier:check": "prettier --check \"**/*.{json,md,sol,yml}\"",
    "test": "forge test",
    "test:lite": "FOUNDRY_PROFILE=lite forge test",
    "test:optimized": "pnpm build:optimized && FOUNDRY_PROFILE=test-optimized forge test"
  }
}
