{
  "name": "@sablier/v2-core",
  "description": "Core smart contracts for the Sablier V2 cryptoasset streaming protocol",
  "version": "1.0.0",
  "author": {
    "name": "Sablier Labs Ltd.",
    "url": "https://sablier.com"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.2",
    "lint-staged": "^12.5.0",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.1.0",
    "rimraf": "^3.0.2",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "keywords": [
    "blockchain",
    "cryptoassets",
    "ethereum",
    "foundry",
    "money-streaming",
    "sablier",
    "sablier-v2",
    "smart-contracts",
    "solidity"
  ],
  "license": "LGPL-3.0",
  "packageManager": "yarn@3.3.0",
  "private": true,
  "scripts": {
    "build": "forge build",
    "build:optimized": "FOUNDRY_PROFILE=optimized forge build",
    "clean": "rimraf broadcast cache optimized-out out",
    "gas:report": "forge test --gas-report --no-match-path \"./test/integration/**/*.sol\" --no-match-test \"test(Fork)?(Fuzz)?_RevertWhen_\\w{1,}?\"",
    "gas:report:optimized": "yarn build:optimized && FOUNDRY_PROFILE=test-optimized forge test --gas-report --no-match-path \"./test/integration/**/*.sol\" --no-match-test \"test(Fork)?(Fuzz)?_RevertWhen_\\w{1,}?\"",
    "gas:snapshot": "forge snapshot --desc --no-match-path \"./test/integration/**/*.sol\" --no-match-test \"test(Fork)?(Fuzz)?_RevertWhen_\\w{1,}?\"",
    "gas:snapshot:optimized": "yarn build:optimized && FOUNDRY_PROFILE=test-optimized forge snapshot --desc --no-match-path \"./test/integration/**/*.sol\" --no-match-test \"test(Fork)?(Fuzz)?_RevertWhen_\\w{1,}?\"",
    "lint": "yarn prettier:check && yarn solhint \"{src,test}/**/*.sol\"",
    "postinstall": "husky install",
    "prettier:write": "prettier --write \"**/*.{json,md,sol,yml}\"",
    "prettier:check": "prettier --check \"**/*.{json,md,sol,yml}\"",
    "test": "FOUNDRY_PROFILE=lite forge test --no-match-path \"./test/integration/**/*.sol\"",
    "test:optimized": "yarn build:optimized && FOUNDRY_PROFILE=test-optimized forge test"
  }
}
